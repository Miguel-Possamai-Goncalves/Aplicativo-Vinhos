<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bege">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/pessoas_outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Clientes"
                android:textColor="@color/preto"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- "Cartão" branco com inputs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/branco"
            android:padding="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="@color/branco">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar Cliente"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/vinho"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preencha os dados para o cadastro"
                android:textColor="@color/preto"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <!-- Nome do Cliente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Cliente"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Nome completo"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- CPF -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="000.000.000-00"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- Telefone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="(DDD) 00000-0000"
                android:inputType="phone"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- E-mail -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="email@exemplo.com"
                android:inputType="textEmailAddress"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- Endereço -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Rua, Número, Bairro"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- Cidade -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Cidade"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- Estado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Estado"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- Observações -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observações"
                android:textColor="@color/preto"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:minHeight="48dp"
                android:hint="Observações sobre o cliente"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:background="@color/bege_claro"
                android:padding="10dp"
                android:layout_marginBottom="16dp"/>

            <!-- Botão -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar Cliente"
                android:backgroundTint="@color/vinho"
                android:textColor="@color/branco"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
